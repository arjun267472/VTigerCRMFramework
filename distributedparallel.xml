          name="test1">
        <classes>
            <class name="organization.CreateAnOrganizationTest">
                <methods>
                    <include name="createWithMandatoryTest"/>
                </methods>
            </class>
            <class name="opportunities.CreateAnOpportunityTest"/>
        </classes>
    </test>
    <test name="test2" preserve-order="true">
        <classes>
            <class name="vendor.VendorTest"/>
            <class name="products.CreateProductTest"/>
        </classes>
    </test>
    <test name="test3" preserve-order="true">
        <classes>
            <class name="organization.CreateAnOrganizationTest">
                <methods>
                    <include name="createWithDropDownTest"/>
                </methods>
            </class>
            <class name="contact.CreateAContactTest">
                <methods>
