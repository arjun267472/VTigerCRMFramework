<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">
    <listeners>
        <listener class-name="genericutility.ListenerUtil"/>
    </listeners>
    <test verbose="2" preserve-order="true"
          name="smoke_test1">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <packages>
            <package name="organization"/>
            <package name="contact"/>
            <package name="email"/>
        </packages>
    </test>
    <test name="regression_test1" preserve-order="true" >
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <packages>
            <package name="organization"/>
            <package name="opportunities"/>
        </packages>
    </test>
</suite>